# Speechmatics API
SPEECHMATICS_API_KEY=YOUR_SPEECHMATICS_API_KEY_HERE

# Backboard.io API
BACKBOARD_BASE_URL=https://app.backboard.io/api
BACKBOARD_API_KEY=YOUR_BACKBOARD_API_KEY_HERE
# BACKBOARD_ASSISTANT_ID is no longer used - each user gets their own assistant

# Chat Mode LLM (more powerful, latency less critical)
CHAT_LLM_PROVIDER=PROVIDER_NAME
CHAT_MODEL_NAME=MODEL_ID

# Voice Mode LLM (recommend fast models for real-time conversation - Latency is a silent killer of UX)
VOICE_LLM_PROVIDER=PROVIDER_NAME
VOICE_MODEL_NAME=MODEL_ID

# Supabase (Auth & Database)
SUPABASE_URL=YOUR_SUPABASE_URL_HERE
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_KEY=YOUR_SUPABASE_SERVICE_KEY_HERE

# App settings
DEBUG=true
